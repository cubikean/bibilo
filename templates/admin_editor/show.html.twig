{% extends 'base.html.twig' %}

{% block title %}Editor{% endblock %}

{% block body %}
    <h1>Editor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ editor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ editor.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ editor.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ editor.createdAt ? editor.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ editor.updatedAt ? editor.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_editor_index') }}">back to list</a>

    <a href="{{ path('app_admin_editor_edit', {'id': editor.id}) }}">edit</a>

    {{ include('admin_editor/_delete_form.html.twig') }}
{% endblock %}
